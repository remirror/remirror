{
  "name": "remirror",
  "description": "A text editor for react built with prosemirror",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "repository": "https://github.com/ifiokjr/remirror",
  "version": "0.0.0",
  "main": "lib/index.js",
  "module": "lib/dist/remirror.esm.js",
  "browser": "lib/dist/remirror.umd.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "run-s clean lint",
    "build": "run-s build:declaration build:rollup build:babel",
    "build-storybook": "build-storybook",
    "build:babel": "babel src --out-dir lib --extensions \".ts,.tsx\"",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly",
    "build:rollup": "rollup -c",
    "clean": "rimraf lib",
    "dev": "run-p watch:*",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:live": "cross-env TEST_ENV=live jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "watch:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -w",
    "watch:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --watch",
    "watch:rollup": "rollup -c -w"
  },
  "dependencies": {
    "@types/hoist-non-react-statics": "3.0.1",
    "@types/lodash": "4.14.120",
    "@types/prosemirror-commands": "1.0.1",
    "@types/prosemirror-gapcursor": "1.0.1",
    "@types/prosemirror-history": "1.0.1",
    "@types/prosemirror-inputrules": "1.0.2",
    "@types/prosemirror-keymap": "1.0.1",
    "@types/prosemirror-menu": "1.0.1",
    "@types/prosemirror-model": "1.5.1",
    "@types/prosemirror-schema-basic": "1.0.1",
    "@types/prosemirror-schema-list": "1.0.1",
    "@types/prosemirror-state": "1.2.1",
    "@types/prosemirror-tables": "0.1.3",
    "@types/prosemirror-transform": "1.1.0",
    "@types/prosemirror-view": "1.3.0",
    "@types/react-icons": "2.2.6",
    "css-in-js-utils": "3.0.0",
    "csstype": "2.6.1",
    "hoist-non-react-statics": "3.2.1",
    "lodash": "4.17.11",
    "prosemirror-commands": "1.0.7",
    "prosemirror-dropcursor": "1.1.1",
    "prosemirror-gapcursor": "1.0.3",
    "prosemirror-history": "1.0.3",
    "prosemirror-inputrules": "1.0.1",
    "prosemirror-keymap": "1.0.1",
    "prosemirror-menu": "1.0.5",
    "prosemirror-model": "1.6.4",
    "prosemirror-schema-basic": "1.0.0",
    "prosemirror-schema-list": "1.0.1",
    "prosemirror-state": "1.2.2",
    "prosemirror-tables": "0.7.10",
    "prosemirror-transform": "1.1.3",
    "prosemirror-view": "1.6.8",
    "simplytyped": "1.7.0"
  },
  "peerDependencies": {
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "react": "16.8.0-alpha.0",
    "react-dom": "16.8.0-alpha.0"
  },
  "keywords": [
    "prosemirror",
    "react",
    "ssr",
    "text editor"
  ],
  "types": "lib/index.d.ts"
}

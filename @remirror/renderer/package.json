{
  "name": "@remirror/renderer",
  "description": "renderer utilities for remirror",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "repository": "https://github.com/ifiokjr/remirror/tree/@remirror/renderer",
  "version": "0.0.1-alpha.2",
  "main": "lib/index.js",
  "module": "lib/dist/remirror-renderer.esm.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prebuild": "run-s clean lint",
    "build": "run-s build:declaration build:babel",
    "build:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -s",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "clean": "rimraf lib",
    "dev": "run-p watch:*",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "test": "jest",
    "test:live": "cross-env TEST_ENV=live jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "watch:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -w",
    "watch:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch"
  },
  "dependencies": {
    "@types/prosemirror-state": "1.2.2",
    "@types/prosemirror-view": "1.3.0",
    "prosemirror-state": "1.2.2",
    "prosemirror-view": "1.7.1",
    "simplytyped": "1.7.0"
  },
  "peerDependencies": {
    "@remirror/core": "0.0.0",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "lib/index.d.ts",
  "umd": "lib/dist/remirror-renderer.umd.js",
  "umd:min": "lib/dist/remirror-renderer.umd.min.js",
  "umdGlobals": {
    "react": "React",
    "@remirror/core": "RemirrorCore",
    "react-dom": "ReactDOM"
  }
}

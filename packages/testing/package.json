{
  "name": "testing",
  "version": "0.0.4",
  "private": true,
  "description": "Test fixtures for remirror unit tests",
  "homepage": "https://github.com/remirror/remirror/tree/HEAD/packages/testing",
  "repository": {
    "type": "git",
    "url": "https://github.com/remirror/remirror.git",
    "directory": "packages/testing"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/testing.js",
      "require": "./dist/testing.cjs",
      "types": "./dist-types/index.d.ts"
    },
    "./package.json": "./package.json",
    "./playwright": {
      "import": "./playwright/dist/testing-playwright.js",
      "require": "./playwright/dist/testing-playwright.cjs",
      "types": "./dist-types/playwright/index.d.ts"
    },
    "./react": {
      "import": "./react/dist/testing-react.js",
      "require": "./react/dist/testing-react.cjs",
      "types": "./dist-types/react.d.ts"
    },
    "./types/*": "./dist/declarations/src/*.d.ts"
  },
  "main": "./dist/testing.cjs",
  "module": "./dist/testing.js",
  "types": "./dist-types/index.d.ts",
  "files": [
    "dist",
    "dist-types",
    "playwright",
    "react"
  ],
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@jest/globals": "^28.1.1",
    "@react-spring/mock-raf": "^1.1.1",
    "@remirror/core": "^2.0.0-beta.17",
    "@remirror/pm": "^2.0.0-beta.17",
    "@remirror/preset-core": "^2.0.0-beta.17",
    "@remirror/react": "^2.0.0-beta.17",
    "@testing-library/react": "^13.1.1",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/fluent-ffmpeg": "^2.1.18",
    "@types/min-document": "^2.19.0",
    "@types/react-test-renderer": "^18.0.0",
    "@types/signal-exit": "^3.0.1",
    "@types/wait-on": "^5.3.1",
    "delay": "^5.0.0",
    "expect-playwright": "^0.8.0",
    "fluent-ffmpeg": "^2.1.2",
    "jest": "^28.1.1",
    "jest-dev-server": "^6.0.3",
    "jest-diff": "^28.1.1",
    "jest-playwright-preset": "^1.7.2",
    "jest-process-manager": "^0.3.1",
    "looks-same": "^7.3.0",
    "min-document": "^2.19.0",
    "p-limit": "^3.1.0",
    "playwright": "^1.16.2",
    "playwright-core": "^1.12.3",
    "playwright-testing-library": "^4.2.1",
    "react-test-renderer": "^18.0.0",
    "signal-exit": "^3.0.3",
    "test-keyboard": "2.0.0-beta.17"
  },
  "devDependencies": {
    "@types/react": "^18.0.6",
    "react": "^18.0.0"
  },
  "peerDependencies": {
    "@types/react": "^16.14.0 || ^17 || ^18",
    "react": "^16.14.0 || ^17 || ^18"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "@remirror": {
    "tsconfigs": {
      "src": {
        "compilerOptions": {
          "types": [
            "expect-playwright/global",
            "jest-playwright-preset",
            "jest",
            "jest-extended",
            "snapshot-diff",
            "playwright",
            "node"
          ]
        }
      }
    }
  },
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "playwright/index.ts",
      "react.tsx"
    ]
  }
}

{
  "name": "jest-remirror",
  "version": "2.0.0-beta.5",
  "description": "A text editor for react built with prosemirror",
  "keywords": [
    "prosemirror",
    "react",
    "text editor"
  ],
  "homepage": "https://github.com/remirror/remirror/tree/HEAD/packages/jest-remirror",
  "repository": {
    "type": "git",
    "url": "https://github.com/remirror/remirror.git",
    "directory": "packages/jest-remirror"
  },
  "license": "MIT",
  "contributors": [
    "Ifiok Jr. <ifiokotung@gmail.com>"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/jest-remirror.js",
      "types": "./dist-types/index.d.ts",
      "default": "./dist/jest-remirror.js"
    },
    "./environment": {
      "import": "./environment/dist/jest-remirror-environment.js",
      "types": "./dist-types/environment.d.ts",
      "default": "./environment/dist/jest-remirror-environment.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/jest-remirror.js",
  "module": "./dist/jest-remirror.js",
  "types": "./dist-types/index.d.ts",
  "files": [
    "dist",
    "dist-types",
    "environment"
  ],
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "@remirror/core": "^2.0.0-beta.5",
    "@remirror/dom": "^2.0.0-beta.5",
    "@remirror/pm": "^2.0.0-beta.5",
    "@remirror/preset-core": "^2.0.0-beta.5",
    "@testing-library/dom": "^8.13.0",
    "@types/sanitize-html": "^2.3.2",
    "jest-prosemirror": "^2.0.0-beta.5",
    "mutationobserver-shim": "^0.3.7",
    "sanitize-html": "^2.4.0",
    "tiny-warning": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^16.3.3",
    "jest": "^28.1.1"
  },
  "peerDependencies": {
    "@types/node": "*",
    "jest": ">= 24"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "@remirror": {
    "tsconfigs": {
      "src": {
        "compilerOptions": {
          "types": [
            "node",
            "jest"
          ]
        }
      }
    }
  },
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "environment.ts"
    ]
  }
}

{
  "name": "@remirror/lit-components",
  "version": "1.0.0",
  "private": true,
  "description": "Web components for @remirror/lit.",
  "keywords": [
    "remirror"
  ],
  "homepage": "https://github.com/remirror/remirror/tree/HEAD/packages/remirror__lit-components",
  "repository": "https://github.com/remirror/remirror/tree/HEAD/packages/remirror__lit-components",
  "license": "MIT",
  "contributors": [
    "Ifiok Jr. <ifiokotung@gmail.com>"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/remirror-lit-components.esm.js",
      "require": "./dist/remirror-lit-components.cjs.js",
      "browser": "./dist/remirror-lit-components.browser.esm.js",
      "types": "./dist/remirror-lit-components.cjs.d.ts",
      "default": "./dist/remirror-lit-components.esm.js"
    },
    "./package.json": "./package.json",
    "./types/*": "./dist/declarations/src/*.d.ts"
  },
  "main": "dist/remirror-lit-components.cjs.js",
  "module": "dist/remirror-lit-components.esm.js",
  "browser": {
    "./dist/remirror-lit-components.cjs.js": "./dist/remirror-lit-components.browser.cjs.js",
    "./dist/remirror-lit-components.esm.js": "./dist/remirror-lit-components.browser.esm.js"
  },
  "types": "dist/remirror-lit-components.cjs.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "@remirror/core": "1.0.0"
  },
  "devDependencies": {
    "@remirror/pm": "1.0.0",
    "lit-element": "^2.4.0"
  },
  "peerDependencies": {
    "@remirror/pm": "1.0.0",
    "lit-element": "^2.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "@remirror": {
    "sizeLimit": "50 KB"
  },
  "rn:dev": "src/index.ts"
}

{
  "name": "remirror",
  "description": "An advanced text editor for react built with prosemirror",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ifiokjr/remirror.git",
    "directory": "packages/remirror"
  },
  "version": "0.0.1-alpha.3",
  "main": "lib/index.js",
  "module": "lib/dist/remirror.esm.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "run-s build:declaration build:babel",
    "build:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -s",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "dev": "run-p watch:*",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "test": "jest",
    "test:live": "cross-env TEST_ENV=live jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "watch:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -w",
    "watch:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@remirror/core": "0.0.1-alpha.3",
    "@remirror/core-extensions": "0.0.1-alpha.3",
    "@remirror/react": "0.0.1-alpha.3",
    "@remirror/renderer-react": "0.0.1-alpha.3"
  },
  "peerDependencies": {
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "keywords": [
    "prosemirror",
    "react",
    "ssr",
    "text editor"
  ],
  "publishConfig": {
    "access": "public"
  },
  "umd": "lib/dist/remirror.umd.js",
  "umd:min": "lib/dist/remirror.umd.min.js",
  "umdGlobals": {
    "react": "React",
    "react-dom": "ReactDOM",
    "@remirror/core": "RemirrorCore",
    "@remirror/core-extensions": "RemirrorCoreExtensions",
    "@remirror/renderer-react": "RemirrorRendererReact",
    "@remirror/extension-mention": "RemirrorMentionsExtension"
  }
}

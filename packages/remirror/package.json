{
  "name": "remirror",
  "version": "3.0.3",
  "description": "One editing package to rule them all, one editing package to bind them.",
  "keywords": [
    "prosemirror",
    "react",
    "remirror",
    "wysiwyg",
    "editing",
    "text editor"
  ],
  "homepage": "https://github.com/remirror/remirror/tree/HEAD/packages/remirror",
  "repository": {
    "type": "git",
    "url": "https://github.com/remirror/remirror.git",
    "directory": "packages/remirror"
  },
  "license": "MIT",
  "contributors": [
    "Ifiok Jr. <ifiokotung@gmail.com>",
    "ocavue "
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist-types/index.d.ts",
      "import": "./dist/remirror.js",
      "require": "./dist/remirror.cjs"
    },
    "./dom": {
      "types": "./dist-types/dom.d.ts",
      "import": "./dom/dist/remirror-dom.js",
      "require": "./dom/dist/remirror-dom.cjs"
    },
    "./extensions": {
      "types": "./dist-types/extensions.d.ts",
      "import": "./extensions/dist/remirror-extensions.js",
      "require": "./extensions/dist/remirror-extensions.cjs"
    },
    "./icons": {
      "types": "./dist-types/icons.d.ts",
      "import": "./icons/dist/remirror-icons.js",
      "require": "./icons/dist/remirror-icons.cjs"
    },
    "./package.json": "./package.json",
    "./styles/*": "./styles/*"
  },
  "main": "./dist/remirror.cjs",
  "module": "./dist/remirror.js",
  "types": "./dist-types/index.d.ts",
  "files": [
    "dist",
    "dist-types",
    "dom",
    "extensions",
    "icons",
    "styles"
  ],
  "scripts": {
    "build": "remirror-cli build"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.0",
    "@remirror/core": "workspace:*",
    "@remirror/core-constants": "workspace:*",
    "@remirror/core-helpers": "workspace:*",
    "@remirror/core-types": "workspace:*",
    "@remirror/core-utils": "workspace:*",
    "@remirror/dom": "workspace:*",
    "@remirror/extension-annotation": "workspace:*",
    "@remirror/extension-bidi": "workspace:*",
    "@remirror/extension-blockquote": "workspace:*",
    "@remirror/extension-bold": "workspace:*",
    "@remirror/extension-callout": "workspace:*",
    "@remirror/extension-code": "workspace:*",
    "@remirror/extension-code-block": "workspace:*",
    "@remirror/extension-collaboration": "workspace:*",
    "@remirror/extension-columns": "workspace:*",
    "@remirror/extension-diff": "workspace:*",
    "@remirror/extension-doc": "workspace:*",
    "@remirror/extension-drop-cursor": "workspace:*",
    "@remirror/extension-embed": "workspace:*",
    "@remirror/extension-emoji": "workspace:*",
    "@remirror/extension-entity-reference": "workspace:*",
    "@remirror/extension-epic-mode": "workspace:*",
    "@remirror/extension-events": "workspace:*",
    "@remirror/extension-find": "workspace:*",
    "@remirror/extension-font-family": "workspace:*",
    "@remirror/extension-font-size": "workspace:*",
    "@remirror/extension-gap-cursor": "workspace:*",
    "@remirror/extension-hard-break": "workspace:*",
    "@remirror/extension-heading": "workspace:*",
    "@remirror/extension-history": "workspace:*",
    "@remirror/extension-horizontal-rule": "workspace:*",
    "@remirror/extension-image": "workspace:*",
    "@remirror/extension-italic": "workspace:*",
    "@remirror/extension-link": "workspace:*",
    "@remirror/extension-list": "workspace:*",
    "@remirror/extension-markdown": "workspace:*",
    "@remirror/extension-mention": "workspace:*",
    "@remirror/extension-mention-atom": "workspace:*",
    "@remirror/extension-node-formatting": "workspace:*",
    "@remirror/extension-paragraph": "workspace:*",
    "@remirror/extension-placeholder": "workspace:*",
    "@remirror/extension-positioner": "workspace:*",
    "@remirror/extension-shortcuts": "workspace:*",
    "@remirror/extension-strike": "workspace:*",
    "@remirror/extension-sub": "workspace:*",
    "@remirror/extension-sup": "workspace:*",
    "@remirror/extension-tables": "workspace:*",
    "@remirror/extension-text": "workspace:*",
    "@remirror/extension-text-case": "workspace:*",
    "@remirror/extension-text-color": "workspace:*",
    "@remirror/extension-text-highlight": "workspace:*",
    "@remirror/extension-trailing-node": "workspace:*",
    "@remirror/extension-underline": "workspace:*",
    "@remirror/extension-whitespace": "workspace:*",
    "@remirror/icons": "workspace:*",
    "@remirror/preset-core": "workspace:*",
    "@remirror/preset-formatting": "workspace:*",
    "@remirror/preset-wysiwyg": "workspace:*",
    "@remirror/theme": "workspace:*",
    "@types/refractor": "^3.0.2",
    "refractor": "^3.6.0"
  },
  "devDependencies": {
    "@remirror/cli": "workspace:*",
    "@remirror/pm": "workspace:*",
    "prettier": "^3.2.5"
  },
  "peerDependencies": {
    "@remirror/pm": "workspace:^",
    "prettier": "^3.2.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/remirror.d.ts",
        "import": "./dist/remirror.js",
        "require": "./dist/remirror.cjs"
      },
      "./dom": {
        "types": "./dom/dist/remirror-dom.d.ts",
        "import": "./dom/dist/remirror-dom.js",
        "require": "./dom/dist/remirror-dom.cjs"
      },
      "./extensions": {
        "types": "./extensions/dist/remirror-extensions.d.ts",
        "import": "./extensions/dist/remirror-extensions.js",
        "require": "./extensions/dist/remirror-extensions.cjs"
      },
      "./icons": {
        "types": "./icons/dist/remirror-icons.d.ts",
        "import": "./icons/dist/remirror-icons.js",
        "require": "./icons/dist/remirror-icons.cjs"
      },
      "./package.json": "./package.json",
      "./styles/*": "./styles/*"
    },
    "main": "./dist/remirror.cjs",
    "module": "./dist/remirror.js",
    "type": "module",
    "types": "./dist/remirror.d.ts"
  },
  "@remirror": {},
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "dom.ts",
      "extensions.ts",
      "icons.ts"
    ]
  }
}

{
  "name": "@remirror/react",
  "version": "3.0.3",
  "description": "Hooks and components for consuming `remirror` with your fave framework `React`.",
  "homepage": "https://github.com/remirror/remirror/tree/HEAD/packages/remirror__react",
  "repository": {
    "type": "git",
    "url": "https://github.com/remirror/remirror.git",
    "directory": "packages/remirror__react"
  },
  "license": "MIT",
  "contributors": [
    "Ifiok Jr. <ifiokotung@gmail.com>"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist-types/index.d.ts",
      "import": "./dist/remirror-react.js",
      "require": "./dist/remirror-react.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/remirror-react.cjs",
  "module": "./dist/remirror-react.js",
  "types": "./dist-types/index.d.ts",
  "files": [
    "dist",
    "dist-types"
  ],
  "scripts": {
    "build": "tsc -b src && remirror-cli build"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.0",
    "@remirror/extension-placeholder": "workspace:*",
    "@remirror/extension-positioner": "workspace:*",
    "@remirror/extension-react-component": "workspace:*",
    "@remirror/preset-react": "workspace:*",
    "@remirror/react-components": "workspace:*",
    "@remirror/react-core": "workspace:*",
    "@remirror/react-hooks": "workspace:*",
    "@remirror/react-renderer": "workspace:*",
    "@remirror/react-utils": "workspace:*"
  },
  "devDependencies": {
    "@remirror/cli": "workspace:*",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "peerDependencies": {
    "@types/react": "^16.14.0 || ^17 || ^18",
    "@types/react-dom": "^16.9.0 || ^17 || ^18",
    "react": "^16.14.0 || ^17 || ^18",
    "react-dom": "^16.14.0 || ^17 || ^18"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/remirror-react.d.ts",
        "import": "./dist/remirror-react.js",
        "require": "./dist/remirror-react.cjs"
      },
      "./package.json": "./package.json"
    },
    "main": "./dist/remirror-react.cjs",
    "module": "./dist/remirror-react.js",
    "type": "module",
    "types": "./dist/remirror-react.d.ts"
  },
  "preconstruct": {
    "entrypoints": [
      "index.ts"
    ]
  }
}

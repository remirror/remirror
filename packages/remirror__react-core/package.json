{
  "name": "@remirror/react-core",
  "version": "3.0.3",
  "description": "The core `React` library which can be used if you want to create a specialized bundle without the extra hooks and components available via `@remirror/react`.",
  "homepage": "https://github.com/remirror/remirror/tree/HEAD/packages/remirror__react-core",
  "repository": {
    "type": "git",
    "url": "https://github.com/remirror/remirror.git",
    "directory": "packages/remirror__react-core"
  },
  "license": "MIT",
  "contributors": [
    "Ifiok Jr. <ifiokotung@gmail.com>"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist-types/index.d.ts",
      "import": "./dist/remirror-react-core.js",
      "require": "./dist/remirror-react-core.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/remirror-react-core.cjs",
  "module": "./dist/remirror-react-core.js",
  "types": "./dist-types/index.d.ts",
  "files": [
    "dist",
    "dist-types"
  ],
  "scripts": {
    "build": "remirror-cli build"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.6",
    "@remirror/core": "workspace:*",
    "@remirror/extension-positioner": "workspace:*",
    "@remirror/extension-react-component": "workspace:*",
    "@remirror/preset-core": "workspace:*",
    "@remirror/preset-react": "workspace:*",
    "@remirror/react-renderer": "workspace:*",
    "@remirror/react-utils": "workspace:*",
    "@remirror/theme": "workspace:*",
    "@seznam/compose-react-refs": "^1.0.6",
    "fast-deep-equal": "^3.1.3",
    "resize-observer-polyfill": "^1.5.1",
    "tiny-warning": "^1.0.3"
  },
  "devDependencies": {
    "@remirror/cli": "workspace:*",
    "@remirror/pm": "workspace:*",
    "@types/jsdom": "^16.2.15",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jsdom": "^17.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "peerDependencies": {
    "@remirror/pm": "workspace:^",
    "@types/react": "^16.14.0 || ^17 || ^18",
    "@types/react-dom": "^16.9.0 || ^17 || ^18",
    "react": "^16.14.0 || ^17 || ^18",
    "react-dom": "^16.14.0 || ^17 || ^18"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/remirror-react-core.d.ts",
        "import": "./dist/remirror-react-core.js",
        "require": "./dist/remirror-react-core.cjs"
      },
      "./package.json": "./package.json"
    },
    "main": "./dist/remirror-react-core.cjs",
    "module": "./dist/remirror-react-core.js",
    "type": "module",
    "types": "./dist/remirror-react-core.d.ts"
  },
  "@remirror": {
    "tsconfigs": {
      "src": {
        "compilerOptions": {
          "types": [
            "node"
          ]
        }
      }
    }
  }
}

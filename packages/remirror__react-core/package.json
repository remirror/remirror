{
  "name": "@remirror/react-core",
  "version": "1.0.0",
  "description": "The core `React` library which can be used if you want to create a specialized bundle without the extra hooks and components available via `@remirror/react`.",
  "homepage": "https://github.com/remirror/remirror/tree/HEAD/packages/remirror__react-core",
  "repository": "https://github.com/remirror/remirror/tree/HEAD/packages/remirror__react-core",
  "license": "MIT",
  "contributors": [
    "Ifiok Jr. <ifiokotung@gmail.com>"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/remirror-react-core.esm.js",
      "require": "./dist/remirror-react-core.cjs.js",
      "browser": "./dist/remirror-react-core.browser.esm.js",
      "types": "./dist/remirror-react-core.cjs.d.ts",
      "default": "./dist/remirror-react-core.esm.js"
    },
    "./package.json": "./package.json",
    "./types/*": "./dist/declarations/src/*.d.ts"
  },
  "main": "dist/remirror-react-core.cjs.js",
  "module": "dist/remirror-react-core.esm.js",
  "browser": {
    "./dist/remirror-react-core.cjs.js": "./dist/remirror-react-core.browser.cjs.js",
    "./dist/remirror-react-core.esm.js": "./dist/remirror-react-core.browser.esm.js"
  },
  "types": "dist/remirror-react-core.cjs.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "@remirror/core": "1.0.0",
    "@remirror/extension-positioner": "1.0.0",
    "@remirror/extension-react-component": "1.0.0",
    "@remirror/extension-react-ssr": "1.0.0",
    "@remirror/i18n": "1.0.0",
    "@remirror/preset-core": "1.0.0",
    "@remirror/preset-react": "1.0.0",
    "@remirror/react-renderer": "1.0.0",
    "@remirror/react-ssr": "1.0.0",
    "@remirror/react-utils": "1.0.0",
    "@remirror/theme": "1.0.0",
    "@seznam/compose-react-refs": "^1.0.6",
    "create-context-state": "1.0.0",
    "fast-deep-equal": "^3.1.3",
    "resize-observer-polyfill": "^1.5.1",
    "tiny-warning": "^1.0.3",
    "use-isomorphic-layout-effect": "^1.1.1",
    "use-previous": "^1.1.0"
  },
  "devDependencies": {
    "@remirror/pm": "1.0.0",
    "@remirror/react": "1.0.0",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "peerDependencies": {
    "@remirror/pm": "1.0.0",
    "@types/react": "^16.14.0 || ^17",
    "@types/react-dom": "^16.9.0 || ^17",
    "react": "^16.14.0 || ^17",
    "react-dom": "^16.14.0 || ^17"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "@remirror": {
    "tsconfigs": {
      "src": {
        "compilerOptions": {
          "types": [
            "node"
          ]
        }
      }
    }
  },
  "rn:dev": "src/index.ts"
}
